<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.android.zzp.albumimageselect">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application android:name="com.zhao.album.AppContext"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme">

        <activity android:name="com.zhao.album.PickBigImagesActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"/>
        <activity android:name="com.zhao.album.PickOrTakeImageActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
